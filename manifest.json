{
    "manifest_version": 2,
    "name": "Password Toppings",
    "description": "Add toppings to your password for increased security",
    "version": "1.0",
    "icons": {
        "16": "/images/pixel_logo.png",
        "48": "/images/pixel_logo.png",
        "128": "/images/pixel_logo.png"
    },
    "browser_action": {
        "default_icon": "/images/pixel_logo.png",
        "default_popup": "popup.html"
    },
    "permissions":["tabs"],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ]
}